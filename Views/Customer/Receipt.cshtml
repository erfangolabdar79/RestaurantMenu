@model PonehRestaurantMenu.Models.Order
@{
    ViewData["Title"] = "رسید سفارش";
}

<h2>رسید سفارش</h2>
<p>شماره تخت: @Model.TableNumber</p>
<p>شماره سفارش: @Model.Id</p>
<p>تاریخ: @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>

<table border="1" cellpadding="5" cellspacing="0" style="width:60%; margin-top:15px;">
    <tr>
        <th>نام آیتم</th>
        <th>تعداد</th>
        <th>قیمت واحد</th>
        <th>قیمت کل</th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.MenuItemName</td>
            <td>@item.Quantity</td>
            <td>@item.Price تومان</td>
            <td>@(item.Price * item.Quantity) تومان</td>
        </tr>
    }
</table>

<h3 style="margin-top:15px;">
    جمع کل: @Model.Items.Sum(i => i.Price * i.Quantity) تومان
</h3>

<button onclick="window.print()">🖨 چاپ رسید</button>
